---
import "@/scss/styles.scss";
import { Image } from "astro:assets";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { GoogleAnalytics } from 'astro-google-analytics';
// タイトル等をPropsとして受け取る。
let { title, description, og_image } = Astro.props
// タイトル等が空の場合やnullの場合はデフォルト値を設定
title =
  title || '早稲田大学公認音楽サークル アンサンブル・リドール'
description =
  description ||
  'こちらのサイトでリドールの情報や活動を紹介していきます。'
const baseURL = 'https://rizdor.github.io/official/';
og_image = og_image || baseURL + 'public/logo.png'
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="早稲田大学公認音楽サークル アンサンブル・リドール" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content={og_image} />
    <meta name="twitter:site" content="@Ens_Rizdor" />
    <meta name="twitter:url" content={Astro.url} />
    <meta name="twitter:title" content="" />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content={og_image} />
    <meta name="google-site-verification" content="64UcNaSKTb6e4r1_WVeGeddplkQ7_IV8KdzDJhRY_vA" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kaisei+Opti&family=Zen+Kaku+Gothic+New:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="icon" sizes="64x64" type="image/png" href="public/fav.ico" />
    <link rel="shortcut icon" href="" />
    <GoogleAnalytics id="G-STZ429M9E0" />
  </head>
  <body class="kaisei-opti-regular"> <!-- フォントクラスを追加 -->
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  /* これでフォントが適用されるはず */
  .kaisei-opti-regular {
    font-family: "Kaisei Opti", serif; /* フォントファミリーを指定 */
    font-weight: 400;
    font-style: normal;
    color: #73450d;
  }
</style>
