---
let { label = "Click me" } = Astro.props; // label を受け取る
---

<button class="btn">{label}</button>

<style>
  .btn {
    padding: 10px 20px;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .btn:hover {
    background-color: #0056b3;
  }
</style>