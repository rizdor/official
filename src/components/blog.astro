---
import { Image } from 'astro:assets';
import image from './images/image.png';

const { width = '500px', height = 'auto', marginbottom = '0px' } = Astro.props;
---

<div class="blog_component" style={`width: ${width}; height: ${height}; margin-bottom: ${marginbottom};`}>
    <Image src={image} alt="CMSから読み込んだ画像" /> 
    <p class="title">簡単なタイトル「・・・・」</p>
    <p class="date">yyyy.mm.dd</p>
</div>

<style>
    .blog_component {
        display: inline-block; /* コンポーネントのサイズを画像に合わせる */
        padding: 10% 10% 0 10%;
        border: 3px solid #73450D;
    }
    .image {
        max-width: 100%; /* 画像が親要素に収まるようにする */
        height: auto; /* 高さを自動で調整 */
    }
    .title{
        padding: 15px 0 5px 0;
    }
    .date{
        padding: 10px 0 25px 0;

    }
</style>
