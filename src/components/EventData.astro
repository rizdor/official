    <style>
        .EventData{
            position: relative;
            display: flex;
            padding-left: 5%;
            box-sizing: border-box; 
        }
        
        .EventData::before {
            content: "";
            display: block;
            width: 100%;
            height: 1px;
            background-color: #73450D;
            position: absolute;
            top: 0;
            left: 0;
        }

            .EventData::after {
                content: "";
                display: block;
                width: 100%;
                height: 1px;
                background-color: #73450D;
                position: absolute;
                bottom: 0;
                left: 0;
            }

            .picture{
                object-fit: contain;
            }
            .data {
                max-width: 63%;
                padding: 50px 0 50px 10%; /* カンマではなくスペースで区切る */

            .title{
                font-size: 20px;
                font-weight: 400;
                color: #73450D;
            }
            .date{
                font-size: 35px;

            }
            .year{
                font-size: 14px

            }.day_of_the_week{
                font-size: 14px;
            }
            .time{
                font-size: 14px;
            }
        }
    </style>



